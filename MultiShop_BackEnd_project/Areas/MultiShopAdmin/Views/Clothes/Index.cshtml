@model List<Clothes>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <a class="btn btn-success" asp-area="MultiShopAdmin" asp-controller="clothes" asp-action="Create" style="width:15%; color:aqua;">Create new Clothes</a>
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Clothes clothes in Model)
                {
                <tr>
                    <td>
                        @clothes.Name
                    </td>
                    <td>
                        @clothes.Tags
                    </td>
                    <td>
                        @clothes.Price
                    </td>

                    <td class="d-flex align-items-center" height="200px !important">
                        <div>
                            <a class="btn btn-warning" asp-area="MultiShopAdmin" asp-controller="clothes" asp-action="Update" asp-route-id="@clothes.Id"><i class="mdi mdi-border-color"></i></a>
                        </div>
                        <div>
                            <a class="btn btn-danger" asp-area="MultiShopAdmin" asp-controller="clothes" asp-action="Delete" asp-route-id="@clothes.Id"><i class="mdi mdi-delete"></i></a>
                        </div>
                        <div>
                            <a class="btn btn-success" asp-area="MultiShopAdmin" asp-controller="clothes" asp-action="Detail" asp-route-id="@clothes.Id"><i class="mdi mdi-information"></i></a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>