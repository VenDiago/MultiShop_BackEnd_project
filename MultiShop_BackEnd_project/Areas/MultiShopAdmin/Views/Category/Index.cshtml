@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <a class="btn btn-success" asp-area="MultiShopAdmin" asp-controller="category" asp-action="Create" style="width:15%; color:aqua;">Create new Category</a>
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                       Name
                    </th>
                    <th>
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Category category in Model)
                {
                    <tr>
                        <td>
                            <img style="width:150px !important; height:150px; object-fit:contain" src="~/assets/img/@category.Image" alt="">
                        </td>
                        <td>
                            @category.Name
                        </td>
                        
                        <td class="d-flex align-items-center" height="200px !important">
                            <div>
                                <a asp-area="MultiShopAdmin" asp-controller="category" asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning"><i class="mdi mdi-border-color"></i></a>
                            </div>
                            <div>
                                <a class="btn btn-danger" asp-area="MultiShopAdmin" asp-controller="category" asp-action="Delete" asp-route-id="@category.Id"><i class="mdi mdi-delete"></i></a>
                            </div>
                            <div>
                                <a class="btn btn-success" asp-area="MultiShopAdmin" asp-controller="category" asp-action="Detail" asp-route-id="@category.Id"><i class="mdi mdi-information"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
