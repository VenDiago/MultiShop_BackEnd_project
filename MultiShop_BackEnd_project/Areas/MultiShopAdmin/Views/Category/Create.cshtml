@model Category
@{
    ViewData["Title"] = "Create";
}

<div class="main-panel" style="width:300px; margin-left:10px;">
    <h1>Create category</h1>
    <form class="mt-3 ml-2" method="post" enctype="multipart/form-data">
        <div>
            <label>Image:</label><br />
            <input asp-for="Photo" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div>
            <label>Name:</label><br />
            <input asp-for="Name" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="mt-2">
            <button class="btn btn-success" type="submit">Create</button>
        </div>
    </form>
</div>