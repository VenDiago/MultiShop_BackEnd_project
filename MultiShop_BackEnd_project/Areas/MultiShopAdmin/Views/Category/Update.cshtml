@model Category
@{
    ViewData["Title"] = "Update";
}

<div class="main-panel" style="width:300px; margin-left:10px;">
    <h1>Edit category</h1>
    <form class="mt-3 ml-2" method="post">
        <div>
            <label>Category image:</label><br />
            <input asp-for="Photo" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Photo"></span>
            <label>Name:</label><br />
            <input asp-for="Name" class="form-control" /><br />


        </div>
        <div class="mt-2">
            <button class="btn btn-success" type="submit">Save</button>
        </div>
    </form>
</div>

