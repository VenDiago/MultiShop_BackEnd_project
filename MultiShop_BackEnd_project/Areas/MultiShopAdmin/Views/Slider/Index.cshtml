@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel" >
    <a class="btn btn-success" asp-area="MultiShopAdmin" asp-controller="slider" asp-action="Create" style="width:15%; color:aqua;">Create new Slider</a>
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Title
                    </th>
                    <th style="width:500px;">
                        Desc
                    </th>
                    <th>
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Slider slider in Model.OrderByDescending(s => s.Id))
                {
                    <tr>
                        <td>
                            <img style="width:150px !important; height:150px; object-fit:contain" src="~/assets/img/@slider.Image" alt="">
                        </td>
                        <td>
                            @slider.Title
                        </td>
                        <td>
                            @slider.Desc
                        </td>
                        <td class="d-flex align-items-center" height="200px !important">
                            <div>
                                <a asp-area="MultiShopAdmin" asp-controller="slider" asp-action="Update" asp-route-id="@slider.Id" class="btn btn-warning"><i class="mdi mdi-border-color"></i></a>
                            </div>
                            <div>
                                <a class="btn btn-danger" asp-area="MultiShopAdmin" asp-controller="slider" asp-action="Delete" asp-route-id="@slider.Id"><i class="mdi mdi-delete"></i></a>
                            </div>
                            <div>
                                <a class="btn btn-success" asp-area="MultiShopAdmin" asp-controller="slider" asp-action="Detail" asp-route-id="@slider.Id"><i class="mdi mdi-information"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
